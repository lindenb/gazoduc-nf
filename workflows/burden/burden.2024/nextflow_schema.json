{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title":"burden 2024",
  "description":"burden",
  "type": "object",
  "defs": { 
    "input_and_output_params": { 
      "title": "Input / Ouput",
      "type": "object",
      "required": ["fasta", "gtf","prefix"], 
      "properties": {
        "fasta": { 
          "type": "string",
	  "format": "file-path",
          "exists": true,
          "mimetype": "text/plain",
          "pattern": "^\\S+\\.fn?a(sta)?(\\.gz)?$",
          "description": "Path to FASTA genome file.",
	  "fa_icon": "far fa-file-code"
        },
      "gtf": {
                    "type": "string",
                    "format": "file-path",
                    "exists": true,
                    "mimetype": "text/plain",
                    "pattern": "^\\S+\\.gtf\\.gz$",
                    "description": "Path to GTF annotation file.",
                    "fa_icon": "fas fa-code-branch",
                    "help_text": "path to indexed gtf."
                },
	"prefix": {
		"type":"string",
		"pattern": "^[a-zA-z0-9_\\.]+\\.$"
		},
	"snpeff_db" : {
		"type":"string",
		"pattern": "^[a-zA-z0-9_\\.]+$",
		"description": "name of the SNPEff database"
		},
	"gnomad": {
		"type":"string",
		"format": "file-path",
		"exists": true,
                "pattern": "^\\S+\\.vcf\\.gz$",
                "description": "path to gnomad"
		},
	"cadd": {
                    "type": "string",
                    "format": "file-path",
                    "mimetype": "text/plain",
                    "pattern": "\\.gz$",
                    "description": "Path to CADD file file.",
                    "fa_icon": "fas fa-code-branch",
                    "help_text": "path to indexed CADD file."
		},
	 "group_by_cluster_size": {
		"type":"string",
		"pattern": "^\\d+[kKMmGg][bB]?$",
		"description":"group bed files by group of 'x' bases"
		}
      }
    }
  },
  "allOf": [
    { "$ref": "#/defs/input_and_output_params" } 
  ]
}
