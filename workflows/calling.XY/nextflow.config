params {
	outdir = "results"
	help = false
	prefix = ""
	fasta = "NO_FILE"
	fai = "NO_FILE"
	dict = "NO_FILE"
	}

conda.enabled = true
conda.useMicromamba = true


process {

withName : "CONCAT_VCFS" {
        publishDir = [
                path: {"${params.outdir}/VCF"},
		saveAs: { filename -> "${params.prefix}$filename" },
                mode: "copy",
                pattern : '*.{bcf,csi,vcf.gz,tbi}',
                overwrite : true
                ]
        }

withName : "BCFTOOLS_STATS|MULTIQC_MALE_VS_FEMALE|ZIP_OF_ZIPS" {
        publishDir = [
                path: {"${params.outdir}/MULTIQC"},
		saveAs: { filename -> "${params.prefix}$filename" },
                mode: "copy",
                pattern : '*.{zip}',
                overwrite : true
                ]
        }


}
