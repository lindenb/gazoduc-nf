params {
	fasta = null
	samplesheet = null
	}

includeConfig "../../config/nextflow.config"

params	{
	/** curstom exclude bed */
	exclude_bed = null
	cases = null
	with_annotation = true
	}

process {

withName : "PREPARE_ONE_REFERENCE:PREPARE_REFERENCE:SCATTER_TO_BED:SCATTER_INTERVALS_BY_NS" {
	ext.output_type = "ACGT"
	ext.max_to_merge = 1
	}

withName: "SMOOVE_CALL|SMOOVE_MERGE|SMOOVE_GENOTYPE|SMOOVE_PASTE|SMOOVE_ANNOTATE" {
	conda = null
	 // module load apptainer && TMPDIR=${PWD} apptainer pull smoove.sif docker://brentp/smoove 
	container = {"${params.apptainer_images.smoove}"}
}

withName: "JVARKIT_VCF_SET_DICTIONARY" {
	ext.sort = true
	ext.extension  = ".vcf.gz"

	 publishDir = [
		path: {"${params.outdir}/VCF"},
		saveAs: { filename -> "${params.prefix}$filename" },
		mode: "copy",
		pattern : '*.{bcf,vcf.gz,csi,tbi}',
		overwrite : true
		]
	}

}

/** END PARAMS */
