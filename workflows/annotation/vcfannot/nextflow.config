params {
	fasta = "NO_FILE"
	fai = "NO_FILE"
	dict = "NO_FILE"
	help =false
	outdir = "results"
	samplesheet = null /* csv : vcf,index(,id)? */
	bed = null
	pedigree = null
	vcf2interval_distance = "1mb"
	}


process {

	withName: "BCFTOOL_CONCAT" {
		ext.prefix = "annot"
		publishDir = [
			path:"${params.outdir}/VCF",
			mode: "copy",
			saveAs: { filename -> "${params.prefix}$filename" },
			pattern : '*.{bcf,vcf.gz,csi,tbi}',
			overwrite : true
			]
        }
	withName : "SCATTER_INTERVALS_BY_NS" {
		ext.output_type = "ACGT"
		ext.max_to_merge = 1
	}

	withName : "SPLIT_N_VARIANTS" {
		ext.method  = "--variants-count 10000"
	}

	withName: "SPLIT_VCF:BED_CLUSTER" {
		ext.args = "--size 1Mb"
	}

}
