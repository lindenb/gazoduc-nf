nextflow_pipeline {

    name "Test Workflow bamstats"
    script "workflows/bamstats/main.nf"
    tag "gitlab_ci"
    tag "workflows"
    tag "workflows/bamstats"
    config "./nextflow.config"

    test("BAMQC") {
      


        when {
            params {
                outdir = "tests-output/results"
		        fasta = "${projectDir}/tests/data/REF/GRCh38.fa"
		        ucsc_name = "hg38"
                samplesheet = "${projectDir}/tests/data/REF/GRCh38/BAMS/samplesheet.csv"
            }
        }

        then {
            assert workflow.success
        }

    }

}
