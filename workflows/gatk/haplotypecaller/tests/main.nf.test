nextflow_pipeline {

    name "Test Workflow gatk/haplotypecaller"
    script "workflows/gatk/haplotypecaller/main.nf"
    options "-resume"
    tag "gitlab_ci"
    tag "workflows"
    tag "workflows/gatk"
    tag "workflows/gatk/haplotypecaller"



    test("ROTA") {
	tag "stub"
	options "-stub"
        when {
            params {
                fasta       = "${projectDir}/tests/data/rotavirus_rf.fa"
                samplesheet = "${projectDir}/tests/data/samplesheet.bams.01.csv"
                makewindows_args = "-w 100 -s 99"
                 bed_cluster_args = "--size 2kb " 
            }
        }

        then {
            assert workflow.success
        }

    }


    test("BASIC") {

        when {
            params {
            fasta       = "${projectDir}/tests/data/REF/GRCh38.fa"
            samplesheet = "${projectDir}/tests/data/REF/GRCh38/BAMS/samplesheet.csv"
            }
        }

        then {
            assert workflow.success
        }

    }

}
