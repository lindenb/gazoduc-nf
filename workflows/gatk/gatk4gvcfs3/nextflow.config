

params {
	help = false
	prefix = "prefix"
	/** required file , CSV, : bam(bai,fasta,fai,sex) */
	samplesheet = null
	bed = null
	outdir = "results"

	makewindows_args = "-w 1000000 -s 999900"
   bed_cluster_args = "--size 1Mb " // callers like gatk+gvcf
	}

process {

withName : "SCATTER_TO_BED:SCATTER_INTERVALS_BY_NS" {
	ext.output_type = "ACGT"
	ext.max_to_merge = 1
}

withName: "BEDTOOLS_MAKEWINDOWS" {
		ext.args = {params.makewindows_args}
		}
/** for callers like hapcaller+gvcf */
withName: "BED_CLUSTER" {
		ext.args = {params.bed_cluster_args}
		}

withName: "GATK_BAM2VCF:DIVIDE_AND_CONQUER1:GATK_BAM2VCF" {
	errorStrategy = "ignore"
	}
withName: "GATK_BAM2VCF:DIVIDE_AND_CONQUER2:GATK_BAM2VCF" {
	errorStrategy = "ignore"
	}
withName: "GATK_BAM2VCF:DIVIDE_AND_CONQUER3:GATK_BAM2VCF" {
	errorStrategy = "ignore"
	}
withName: "GATK_BAM2VCF:DIVIDE_AND_CONQUER4:GATK_BAM2VCF" {
	errorStrategy = "ignore"
	}
withName: "GATK_BAM2VCF:DIVIDE_AND_CONQUER5:GATK_BAM2VCF" {
	errorStrategy = "ignore"
	}
withName: "GATK_BAM2VCF:DIVIDE_AND_CONQUER6:GATK_BAM2VCF" {
	errorStrategy = "ignore"
	}
}
