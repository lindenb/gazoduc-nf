nextflow_process {

    name "Test Process BCFTOOLS_QUERY"
    script "modules/bcftools/query/main.nf"
    process "BCFTOOLS_QUERY"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/bcftools"
    tag "modules/bcftools/query"
    config "./nextflow.config"

    test("BASIC") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"vcf"], file("${projectDir}/tests/data/rotavirus_rf.vcf.gz")]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }


    test("BASIC") {
        tag "stub"
