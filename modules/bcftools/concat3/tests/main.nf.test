nextflow_process {

    name "Test Process BCFTOOLS_CONCAT"
    script "modules/bcftools/concat3/main.nf"
    process "BCFTOOLS_CONCAT"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/bcftools"
    tag "modules/bcftools/concat3"
    config "./nextflow.config"

   setup {
           run("SPLIT_N_VARIANTS") {
                script "modules/jvarkit/splitnvariants/main.nf"
               
                process {
                        """
                        input[0] = [ [id:"bed"], [] ]
                        input[1] = [
                            [id:"ref"],
                            file("${projectDir}/tests/data/rotavirus_rf.vcf.gz"),
                            file("${projectDir}/tests/data/rotavirus_rf.vcf.gz.tbi")
                            ]
                        """
                        }
                }
            }


    test("BASIC") {

        when {
            params {
                 args1= "false"
            }
            process {
                """
               input[0] = SPLIT_N_VARIANTS.out.vcf
                            .mix( SPLIT_N_VARIANTS.out.tbi)
                            .map{meta,f->f}
                            .collect()
                            .map{[[id:"concat"],it.sort()]}
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

    test("STUB") {
	options "-stub"
	tag "stub"
        when {
            params {
                 args1= "false"
            }
            process {
                """
               input[0] = SPLIT_N_VARIANTS.out.vcf
                            .mix( SPLIT_N_VARIANTS.out.tbi)
                            .map{meta,f->f}
                            .collect()
                            .map{[[id:"concat"],it.sort()]}
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }


}
