nextflow_process {

    name "Test Process VCF_TO_BED"
    script "modules/bcftools/vcf2bed/main.nf"
    process "VCF_TO_BED"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/bcftools"
    tag "modules/bcftools/vcf2bed"

    test("WITHOUT_IDX") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"test01"], file("${projectDir}/tests/data/rotavirus_rf.vcf.gz"),[]]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }


    test("WITH_IDX") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"test01"], file("${projectDir}/tests/data/rotavirus_rf.vcf.gz"),file("${projectDir}/tests/data/rotavirus_rf.vcf.gz.tbi")]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
