nextflow_process {

    name "Test Process JVARKIT_VCF_TO_INTERVALS"
    script "modules/jvarkit/vcf2intervals/main.nf"
    process "JVARKIT_VCF_TO_INTERVALS"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/jvarkit"
    tag "modules/jvarkit/vcf2intervals"
    config "./nextflow.config"

    test("BASIC") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"vcf"],file("${projectDir}/tests/data/rotavirus_rf.vcf.gz"),[],[]]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

    test("STUB") {
        tag "stub"
        options "-stub"
