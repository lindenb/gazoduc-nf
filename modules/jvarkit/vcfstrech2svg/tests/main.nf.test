nextflow_process {

    name "Test Process VCF_STRECH_TO_SVG"
    script "modules/jvarkit/vcfstrech2svg/main.nf"
    process "VCF_STRECH_TO_SVG"
    tag "modules"
    tag "modules/jvarkit"
    tag "modules/jvarkit/vcfstrech2svg"
    tag "gitlab_ci"
    config "./nextflow.config"


    test("BASIC") {
        when {
           
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.dict")]
                input[3] = [[id:"gtf"],[],[]]
                input[4] = [[id:"bams"], [
                    file("${projectDir}/tests/data/S1.bam"), 
                    file("${projectDir}/tests/data/S1.bam.bai"), 
                    file("${projectDir}/tests/data/S2.bam"), 
                    file("${projectDir}/tests/data/S2.bam.bai")
                    ]] 
                 input[5] = [[id:"RF01_200_500"], 
                    file("${projectDir}/tests/data/rotavirus_rf.vcf.gz"),
                    file("${projectDir}/tests/data/rotavirus_rf.vcf.gz.tbi")
                    ]
                 input[6] = [[id:"bed"], 
                    file("${projectDir}/tests/data/rotavirus_rf.01.bed")
                    ]
                """
                }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

    test("STUB") {
         tag "stub"
        options "-stub"
        when {
           
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.dict")]
                input[3] = [[id:"gtf"],[],[]]
                input[4] = [[id:"bams"], [
                    file("${projectDir}/tests/data/S1.bam"), 
                    file("${projectDir}/tests/data/S1.bam.bai"), 
                    file("${projectDir}/tests/data/S2.bam"), 
                    file("${projectDir}/tests/data/S2.bam.bai")
                    ]] 
                 input[5] = [[id:"RF01_200_500",interval:"RF01:200-500"], 
                    file("${projectDir}/tests/data/rotavirus_rf.vcf.gz"),
                    file("${projectDir}/tests/data/rotavirus_rf.vcf.gz.tbi")
                    ]
                input[6] = [[id:"bed"], 
                    file("${projectDir}/tests/data/rotavirus_rf.01.bed")
                    ]
                """
                }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }
}
