nextflow_process {

    name "Test Process FASTQ_HEAD"
    script "modules/fastq/head/main.nf"
    process "FASTQ_HEAD"
    tag "modules/fastq/head"
    tag "fastq"
    tag "gitlab_ci"

    test("BASIC") {

        when {

            process {
                """
                input[0] = [[id:"S1"], file("${projectDir}/tests/data/S1.R1.fq.gz")]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

    test("STUB") {
        options "-stub" 
        when {

            process {
                """
                input[0] = [[id:"S1"], file("${projectDir}/tests/data/S1.R1.fq.gz")]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

}
