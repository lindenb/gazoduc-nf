nextflow_process {

    name "Test Process BWA_INDEX"
    script "modules/bwa/index/main.nf"
    process "BWA_INDEX"
    config "./nextflow.config"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/bwa"
    tag "modules/bwa/index"



    test("BASIC") {

        when {
            params {
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }


    test("STUB") {
	tag "stub"
	options "-stub"
        when {
            params {
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }


}
