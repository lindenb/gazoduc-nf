nextflow_process {

    name "Test Process IGV_REPORT"
    script "modules/igv/igv_report1/main.nf"
    process "IGV_REPORT"
    tag "modules"
    tag "modules/igv"
    tag "modules/igv/igv_report1"
    tag "gitlab_ci"

    test("BASIC") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
				input[0] = [ [id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
				input[1] = [ [id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
				input[2] = [ [id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.dict")]
 				input[3] = [ [id:"no_cytoband"],[]]
                input[4] = [ [id:"no_refgene"],[],[]]
 				input[5] = [ [id:"no_samples"],[]]
 				input[6] = [ [id:"no_ped"],[]]
                input[7] = [ [id:"vcf"], file("${projectDir}/tests/data/rotavirus_rf.vcf.gz"), file("${projectDir}/tests/data/rotavirus_rf.vcf.gz.tbi")]

  				input[8] = Channel.of(1,2,3,4,5)
                            .map{"${projectDir}/tests/data/S\${it}.bam"}
                            .map{[[
                                id:"test",
                                contig: "RF07",
                                start : 684,
                                end :  684,
                                ref : "T"
                                ],file(it),file(it+".bai")]}
                            .groupTuple()
                           
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

