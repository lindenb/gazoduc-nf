nextflow_process {

    name "Test Process SAMTOOLS_COLLATE"
    script "modules/samtools/collate/main.nf"
    process "SAMTOOLS_COLLATE"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/samtools"
    tag "modules/samtools/collate"

    test("BASIC") {
        when {
            
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"S1"], file("${projectDir}/tests/data/S1.bam")]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

}
