nextflow_pipeline {

    name "Test Workflow xhunter"
    script "workflows/expansionhunter/main.nf"
    options "-stub"

    test("EXPANSION_HUNTER_BASIC") {

        when {
            params {
                outdir = "${projectDir}/tests/results"
		fasta =  "${projectDir}/tests/data/REF/GRCh38.fa"
		samplesheet = "${projectDir}/tests/data/REF/GRCh38/BAMS/samplesheet.csv"
            }
        }

        then {
            assert workflow.success
        }

    }

}
