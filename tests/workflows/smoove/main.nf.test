    tag "workflows/smoove"
    tag "workflows"

    test("STUB") {
        options "-stub"
        
        when {
            params {
                fasta       = "${projectDir}/tests/data/rotavirus_rf.fa"
                samplesheet = "${projectDir}/tests/data/samplesheet.bams.01.csv"
                gff3        =  "${projectDir}/tests/data/rotavirus_rf.gff3.gz"
                with_annotation = true
            }
        }

        then {
            assert workflow.success
        }

    }

}
