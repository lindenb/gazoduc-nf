nextflow_process {

    name "Test Process APPLY_INDEXCOV"
    script "modules/indexcov/apply/main.nf"
    process "APPLY_INDEXCOV"
    tag "modules"
    tag "modules/indexcov"
    tag "modules/goleft"
    tag "modules/indexcov/apply"

    test("INDEXCOV") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/REF/GRCh38.fa")]
                input[1] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/REF/GRCh38.fa.fai")]
                input[2] = [[id:"bams"],[
                        file("${projectDir}/tests/data/REF/GRCh38/BAMS/S1/S1.cram"),
                        file("${projectDir}/tests/data/REF/GRCh38/BAMS/S1/S1.cram.crai"),
                        file("${projectDir}/tests/data/REF/GRCh38/BAMS/S2/S2.cram"),
                        file("${projectDir}/tests/data/REF/GRCh38/BAMS/S2/S2.cram.crai"),
                        file("${projectDir}/tests/data/REF/GRCh38/BAMS/S3/S3.cram"),
                        file("${projectDir}/tests/data/REF/GRCh38/BAMS/S3/S3.cram.crai")
			]]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
