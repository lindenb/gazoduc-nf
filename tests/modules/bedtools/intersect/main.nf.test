nextflow_process {

    name "Test Process BEDTOOLS_INTERSECT"
    script "modules/bedtools/intersect/main.nf"
    process "BEDTOOLS_INTERSECT"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/bedtools"
    tag "modules/bedtools/intersect"

    setup {
        run("BEDTOOLS_RANDOM") {
                script "modules/bedtools/random/main.nf"
                process {
                        """
                        input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                        """
                        }
                }
            }



    test("WITH_FAI") {

        when {
            
            process {
                """
				input[0] = [ [id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[1] = BEDTOOLS_RANDOM.out.bed.combine(
                            Channel.fromPath("${projectDir}/tests/data/rotavirus_rf.01.bed")
                            )
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

 test("WITHOUT_FAI") {

        when {
            
            process {
                """
				input[0] = [ [id:"ref"],[]]
                input[1] = BEDTOOLS_RANDOM.out.bed.combine(
                            Channel.fromPath("${projectDir}/tests/data/rotavirus_rf.01.bed")
                            )
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }


}
