nextflow_process {

    name "Test Process BEDTOOLS_MERGE"
    script "modules/bedtools/merge/main.nf"
    process "BEDTOOLS_MERGE"
   tag "gitlab_ci"
    tag "modules"
    tag "modules/bedtools"
    tag "modules/bedtools/merge"

    test("BASIC") {

        when {
            
            process {
                """
 				input[0] = [ [id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.01.bed")]
               """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }



    test("BASIC") {
        tag "stub"
        options "-stub"

        when {
            
            process {
                """
 				input[0] = [ [id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.01.bed")]
               """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

}
