nextflow_process {

    name "Test Process BEDTOOLS_MULTIINTER"
    script "modules/bedtools/multiinter/main.nf"
    process "BEDTOOLS_MULTIINTER"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/bedtools"
    tag "modules/bedtools/multiinter"

    setup {
        run("BEDTOOLS_RANDOM") {
                script "modules/bedtools/random/main.nf"
                process {
                        """
                        input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                        """
                        }
                }
            }



    test("WITH_FAIDX") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
				input[0] = [ [id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[1] = BEDTOOLS_RANDOM.out.bed.map{m,f->f}
                        .combine(Channel.of(file("${projectDir}/tests/data/rotavirus_rf.bed")))
                        .collect()
                        .map{[[id:"inter"],it]}
                    
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }
    }
   test("WITHOUT_FAIDX") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
				input[0] = [ [id:"ref"],[]]
                input[1] = BEDTOOLS_RANDOM.out.bed.map{m,f->f}
                        .combine(Channel.of(file("${projectDir}/tests/data/rotavirus_rf.bed")))
                        .collect()
                        .map{[[id:"inter"],it]}
                    
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }
    }

}
