    process "BEDTOOLS_COMPLEMENT"


    tag "modules"
    tag "modules/bedtools"
    tag "modules/bedtools/complement"

    test("COMPLEMENT") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[1] = [[id:"bed"],file("${projectDir}/tests/data/rotavirus_rf.bed")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
