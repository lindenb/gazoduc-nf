nextflow_process {

    name "Test Process BEDTOOLS_SUBTRACT"
    script "modules/bedtools/subtract/main.nf"
    process "BEDTOOLS_SUBTRACT"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/bedtools"
    tag "modules/bedtools/subtract"

    setup {
        run("BEDTOOLS_RANDOM") {
                script "modules/bedtools/random/main.nf"
                process {
                        """
                        input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                        """
                        }
                }
            }



    test("BASIC") {

        when {
            
            process {
                """
                input[0] = BEDTOOLS_RANDOM.out.bed.combine(
                            Channel.fromPath("${projectDir}/tests/data/rotavirus_rf.bed")
                            )
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }



}
