nextflow_process {

    name "Test Process BWA_MEM"
    script "modules/bwa/mem/main.nf"
    process "BWA_MEM"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/bwa"
    tag "modules/bwa/mem"


    test("PAIRED_END") {
	setup {
           run("BWA_INDEX") {
		script "modules/bwa/index/main.nf"
		process {
			"""
	                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
			"""
			}
		}
	    }


        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
		input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
		input[1] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
		input[2] = BWA_INDEX.out.bwa_index
		input[3] = [[id:"nobed"],[]]
		input[4] = [[id:"S1"],file("${projectDir}/tests/data/S1.R1.fq.gz"),file("${projectDir}/tests/data/S1.R2.fq.gz")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }




