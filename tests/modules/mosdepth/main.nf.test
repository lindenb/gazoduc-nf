nextflow_process {

    name "Test Process MOSDEPTH"
    script "modules/mosdepth/main.nf"
    process "MOSDEPTH"

    tag "modules"
    tag "modules/mosdepth"

    test("NO_BED") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"S1"],file("${projectDir}/tests/data/S1.bam"),file("${projectDir}/tests/data/S1.bam.bai"),[]]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }




    test("WITH_BED") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"S1"],file("${projectDir}/tests/data/S1.bam"),file("${projectDir}/tests/data/S1.bam.bai"),file("${projectDir}/tests/data/rotavirus_rf.bed")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }



}
