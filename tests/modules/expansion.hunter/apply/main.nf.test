nextflow_process {

    name "Test Process XHUNTER_APPLY"
    script "modules/expansion.hunter/apply/main.nf"
    process "XHUNTER_APPLY"
    tag "modules"
    tag "modules/expansion.hunter"
    tag "modules/expansion.hunter/apply"

    test("Should run without failures") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/rotavirus_rf.xhunter.catalog.json")]
                input[3] = [[id:"S1",sex:"male"],file("${projectDir}/tests/data/S1.bam"),file("${projectDir}/tests/data/S1.bam.bai")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
