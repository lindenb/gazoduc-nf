nextflow_process {

    name "Test Process PB_FQ2BAM"
    script "modules/parabricks/fq2bam/main.nf"
    process "PB_FQ2BAM"
    tag "parabricks"
    tag "gpus"
    tag "modules"
    tag "modules/parabricks"
    tag "modules/parabricks/fq2bam"

    profile "nautilus"
    config "./nextflow.config"


	setup {
           run("BWA_INDEX") {
		script "modules/bwa/index/main.nf"
		process {
			"""
	                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
			"""
			}
		}
	    }



    test("SINGLE_END") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
		input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
		input[1] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
		input[2] = BWA_INDEX.out.bwa_index
		input[3] = [[id:"indels"],file("${projectDir}/tests/data/rotavirus_rf.vcf.gz"),file("${projectDir}/tests/data/rotavirus_rf.vcf.gz.tbi")]
		input[4] = [[id:"S1"], file("${projectDir}/tests/data/S1.R1.fq.gz"),  file("${projectDir}/tests/data/S1.R2.fq.gz") ]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

}
