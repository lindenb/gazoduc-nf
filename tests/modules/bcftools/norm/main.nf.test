    process "BCFTOOLS_NORM"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/bcftools"
    tag "modules/bcftools/norm"


    test("BASIC") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref"], file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref"], file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [
                        [id:"vcf"], 
                        file("${projectDir}/tests/data/rotavirus_rf.vcf.gz")
                        ]

