nextflow_process {

    name "Test Process BCFTOOLS_CONCAT"
    script "modules/bcftools/concat2/main.nf"
    process "BCFTOOLS_CONCAT"
    tag "modules"
    tag "modules/bcftools"
    tag "modules/bcftools/concat2"
    config "./nextflow.config"

   setup {
           run("SPLIT_N_VARIANTS") {
                script "modules/jvarkit/splitnvariants/main.nf"
               
                process {
                        """
                        input[0] = [ [id:"bed"], [] ]
                        input[1] = [
                            [id:"ref"],
                            file("${projectDir}/tests/data/rotavirus_rf.vcf.gz"),
                            file("${projectDir}/tests/data/rotavirus_rf.vcf.gz.tbi")
                            ]
                        """
                        }
                }
            }



    test("BASIC") {

        when {
            params {
                 args1= "false"
            }
            process {
                """
               input[0] = [ [id:"bed"], [] ]
               input[1] = SPLIT_N_VARIANTS.out.vcf
                            .mix( SPLIT_N_VARIANTS.out.tbi)
                            .map{meta,f->f}
                            .collect()
                            .map{[[id:"concat"],it.sort()]}
                            .view()
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

     test("WITH_BED") {

        when {
            params {
                  args1= "false"
            }
            process {
                """
               input[0] = [ [id:"bed"],  file("${projectDir}/tests/data/rotavirus_rf.bed") ]
               input[1] = SPLIT_N_VARIANTS.out.vcf
                            .mix( SPLIT_N_VARIANTS.out.tbi)
                            .map{meta,f->f}
                            .collect()
                            .map{[[id:"with_bed"],it.sort()]}
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

    test("BY_CONTIG") {

        when {
            params {
                 args1= "true"
            }
            process {
                """
               input[0] = [ [id:"bed"], [] ]
               input[1] = SPLIT_N_VARIANTS.out.vcf
                            .mix( SPLIT_N_VARIANTS.out.tbi)
                            .map{meta,f->f}
                            .collect()
                            .map{[[id:"by_contig"],it.sort()]}
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

    test("WITH_BED_BY_CONTIG") {

            when {
                params {
                    args1= "true"
                }
                process {
                    """
                input[0] = [ [id:"bed"],  file("${projectDir}/tests/data/rotavirus_rf.bed") ]
                input[1] = SPLIT_N_VARIANTS.out.vcf
                                .mix( SPLIT_N_VARIANTS.out.tbi)
                                .map{meta,f->f}
                                .collect()
                                .map{[[id:"bed_by_contig"],it.sort()]}
                    """
                }
            }

            then {
                assert process.success
                //assert snapshot(process.out).match()
            }

        }
}
