nextflow_process {

    name "Test Process VEP_INSTALL_PLUGINS"
    script "modules/vep/install.plugins/main.nf"
    process "VEP_INSTALL_PLUGINS"
    tag "modules"
    tag "modules/vep"
    tag "modules/vep/install.plugins"
    tag "gitlab_ci"
    config "./nextflow.config"

    test("EMPTY") {

        when {
            params {
                plugin_name= ""
            }
            process {
                """
                input[0] = [id:"vep"]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

    test("SpliceAI") {

        when {
            params {
                plugin_name = "SpliceAI"
            }
            process {
                """
                input[0] = [id:"vep"]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

    test("LOEUF") {

        when {
            params {
                plugin_name = "LOEUF"
            }
            process {
                """
                input[0] = [id:"vep"]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

    test("STUB") {
        options "-stub"
        when {
            params {
                plugin_name = "zzz"
            }
            process {
                """
                input[0] = [id:"vep"]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }

}
