nextflow_process {

    name "Test Process BASE_RECALIBRATOR"
    script "modules/gatk/baserecalibrator/main.nf"
    process "BASE_RECALIBRATOR"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/gatk"
    tag "modules/gatk/baserecalibrator"

    test("WITHOUT_BED") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.dict")]
                input[3] = [[id:"ref"],[file("${projectDir}/tests/data/S1.vcf.gz"), file("${projectDir}/tests/data/S1.vcf.gz.tbi")] ]
                input[4] = [[id:"S1"],file("${projectDir}/tests/data/S1.bam"), file("${projectDir}/tests/data/S1.bam.bai"), [] ]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }


    test("WITH_BED") {

        when {
            params {
                // define parameters here. Example:
