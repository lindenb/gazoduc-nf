nextflow_process {

    name "Test Process FASTP"
    script "modules/fastp/main.nf"
    process "FASTP"
    tag "modules"
    tag "modules/fastp"

    test("SINGLE") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"S1"],[
			 file("${projectDir}/tests/data/S1.R1.fq.gz")
			]]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }


    test("PAIRED") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"S1"],[
			 file("${projectDir}/tests/data/S1.R1.fq.gz"),
			 file("${projectDir}/tests/data/S1.R2.fq.gz")
			]]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }


}
