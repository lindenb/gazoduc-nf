nextflow_process {

    name "Test Process SAMTOOLS_MERGE"
    script "modules/samtools/merge/main.nf"
    process "SAMTOOLS_MERGE"
    tag "gitlab_ci"
    tag "modules"
    tag "modules/samtools"
    tag "modules/samtools/merge"

    test("BASIC") {

        when {
            
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"x1"],[
                    file("${projectDir}/tests/data/S1.bam"),
                    file("${projectDir}/tests/data/S1.bam.bai"),
                    file("${projectDir}/tests/data/S2.bam"),
                    file("${projectDir}/tests/data/S2.bam.bai")
                    ]]
                """
            }
        }

        then {
            assert process.success
            // assert snapshot(process.out).match()
        }

    }

}
