nextflow_process {

    name "Test Process SAMTOOLS_SORT"
    script "modules/samtools/sort/main.nf"
    process "SAMTOOLS_SORT"
    tag "modules"
    tag "modules/samtools"
    tag "modules/samtools/sort"
    config "./nextflow.config"

    test("BASIC") {

        when {
            params {
               args1 = ""
            }
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"by_coord"], file("${projectDir}/tests/data/S1.bam")]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }
test("BY_NAME") {

        when {
            params {
               args1 = "-n"
            }
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"by_name"], file("${projectDir}/tests/data/S1.bam")]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }
}
