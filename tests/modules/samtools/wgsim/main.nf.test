nextflow_process {

    name "Test Process WGSIM"
    script "modules/samtools/wgsim/main.nf"
    process "WGSIM"
    tag "modules"
    tag "modules/samtools"
    tag "modules/samtools/wgsim"

    test("WGSIM generate fastq files") {

        when {
            params {
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref"],file("${projectDir}/tests/data/rotavirus_rf.fasta")]
                input[1] = [[id:"S1"]]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
