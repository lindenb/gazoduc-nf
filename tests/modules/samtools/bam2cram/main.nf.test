nextflow_process {

    name "Test Process BAM_TO_CRAM"
    script "modules/samtools/bam2cram/main.nf"
    process "BAM_TO_CRAM"
    tag "modules"
    tag "modules/samtools"
    tag "modules/samtools/bam2cram"

    test("Should run without failures") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/rotavirus_rf.fa")]
                input[1] = [[id:"ref",ucsc_name:"hg38"],file("${projectDir}/tests/data/rotavirus_rf.fa.fai")]
                input[2] = [[id:"S1"],file("${projectDir}/tests/data/S1.bam")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

