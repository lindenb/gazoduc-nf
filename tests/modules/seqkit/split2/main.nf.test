nextflow_process {

    name "Test Process SEQKIT_SPLIT2"
    script "modules/seqkit/split2/main.nf"
    process "SEQKIT_SPLIT2"
    tag "modules"
    tag "modules/seqkit"
    tag "modules/seqkit/split2"
    config "./nextflow.config"

    test("PAIRED_END") {
        
        when {
            params {
                args1 = "--by-size 200"
                }
            process {
                """
                input[0] = [[id:"S1"], file("${projectDir}/tests/data/S1.R1.fq.gz"), file("${projectDir}/tests/data/S1.R2.fq.gz")]
                """
            }
        }

        then {
            assert process.success
            with(process.out.fastqs) {
                with(get(0))  {
                    assert size() ==2
                    with(get(1)) {
                        assert  get(0).toString().matches(".*S1\\.R[12]\\.part_00[0-9]\\.fq.gz")
                        }
                    
                    }
                }
            //assert snapshot(process.out).match()
        }

    }

 test("SINGLE_END") {
        
        when {
            params {
                args1 = "--by-size 200"
                }
            process {
                """
                input[0] = [[id:"S1"], file("${projectDir}/tests/data/S1.R1.fq.gz"), []]
                """
            }
        }

        then {
            assert process.success
            //assert snapshot(process.out).match()
        }

    }


}
