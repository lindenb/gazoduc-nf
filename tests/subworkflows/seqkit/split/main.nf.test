nextflow_workflow {

    name "Test Workflow SEQKIT_SPLIT"
    script "subworkflows/seqkit/split/main.nf"
    workflow "SEQKIT_SPLIT"
    tag "subworkflows"
    tag "subworkflows/seqkit"
    tag "subworkflows/seqkit/split"
    config "./nextflow.config"

    test("BASIC") {

        when {
            params {
                  args1 = "--by-size 200"
                }
            workflow {
                """
                input[0] = [disable_split:false]
                input[1] = Channel.of(
                    [[id:"S1a"], file("${projectDir}/tests/data/S1.R1.fq.gz"), file("${projectDir}/tests/data/S1.R2.fq.gz")],
                    [[id:"S1b"], [file("${projectDir}/tests/data/S1.R1.fq.gz"), file("${projectDir}/tests/data/S1.R2.fq.gz")] ],
                    [[id:"S1c"], [file("${projectDir}/tests/data/S1.R2.fq.gz")] ],
                    [[id:"S1d"], file("${projectDir}/tests/data/S1.R2.fq.gz") ]
                    )
                """
            }
        }

        then {
            assert workflow.success
            //assert snapshot(workflow.out).match()
        }

    }

}
