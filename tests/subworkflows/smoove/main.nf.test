                input[4] =  [[id:"xbed"], file("${projectDir}/tests/data/rotavirus_rf.bed")]
                input[5] =  Channel.of(
                    [[id:"S1",status:"case"], file("${projectDir}/tests/data/S1.bam"),  file("${projectDir}/tests/data/S1.bam.bai")],
                    [[id:"S2",status:"case"], file("${projectDir}/tests/data/S2.bam"),  file("${projectDir}/tests/data/S2.bam.bai")],
